@model IEnumerable<Travel.Models.UserInfo>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />




    <link rel="stylesheet" href=@Url.Content("/Content/css/bootstrap.css")>

    <title>ViewTraveller</title>

    <meta name="description" content="">
    <!--
    Travel Template
    http://www.templatemo.com/tm-409-travel
    -->
    <meta name="viewport" content="width=device-width">
    <meta name="author" content="templatemo">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,800,700,600,300' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href=@Url.Content("/Content/css/bootstrap.min.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/css/font-awesome.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/css/animate.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/css/templatemo_misc.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/css/templatemo_style.css")>

    <script src=@Url.Content("/Content/js/vendor/modernizr-2.6.1-respond-1.1.0.min.js")></script>
    <title>@Page.Title</title>
</head>
<body>
    <div class="logo">
        <a href="#">
            <img src="~/Content/images/logo.png" alt="travel html5 template" title="travel html5 template">
        </a>
    </div> <!-- /.logo -->






    <button class="btn" onclick="location.href='@Url.Action("CreateUser", "Admin" )'"><i class="fa fa-plus"></i> Add New User</button>
    <table class="table table-dark table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirtsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirtsName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    <img src="@Url.Content(item.Image)" width="150" height="150" class="img-fluid img-thumbnail">
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserRole)
                </td>
                <td>


                    @Html.ActionLink("Delete", "DeleteUsers", new { id = item.ID })
                </td>
            </tr>
        }

    </table>

    <div>
        @Html.ActionLink("Back To Main Page", "AdminIndex")
    </div>

</body>
</html>
