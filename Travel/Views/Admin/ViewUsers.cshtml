@model IEnumerable<Travel.Models.UserInfo>

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />




    <link rel="stylesheet" href=@Url.Content("/Content/css/bootstrap.css")>

 
  

    
</head>
<body>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />



    <button class="btn" onclick="location.href='@Url.Action("CreateUser", "Admin" )'"><i class="fa fa-plus"></i> Add New User</button>
    <table class="table table-dark table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirtsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirtsName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    <img src="@Url.Content(item.Image)" width="150" height="150" class="img-fluid img-thumbnail">
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserRole)
                </td>
                <td>


                    @Html.ActionLink("Delete", "DeleteUsers", new { id = item.ID })
                </td>
            </tr>
        }

    </table>

    <div>
        @Html.ActionLink("Back To Main Page", "AdminIndex")
    </div>

</body>
</html>
